{
  "git.ignoreLimitWarning": true,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[ruby]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 2
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true
  },
  "files.exclude": {
    ".yarn/": true,
    ".next/": true,
    ".github/": true,
    ".vscode/": true,
    "out/": true
  }
}
